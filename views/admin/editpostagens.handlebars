{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h1>Editar postagem</h1>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" required value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" value="{{postagem.slug}}" name="slug" class="form-control" required>
            <label for="decricao">Descricao: </label>
            <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control" required>
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" cols="10" rows="10" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-select" required>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-2 btn-sm" type="submit">Editar postagem</button>
        </form>
    </div>
</div>