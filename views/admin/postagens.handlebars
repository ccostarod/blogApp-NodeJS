{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a> 

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Descrição: {{descricao}}</small><br>
            <br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <div class="card mt-2">
                <div class="card-body">
                    <p>{{conteudo}}</p><br>
                </div>
            </div>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2 btn-sm">Editar</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2 btn-sm">Deletar</button></a>

        </div> 
    </div>
{{else}}
<h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}